#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'array_database'
require 'controler'
require 'creator'
require 'finder'
require 'io/console'
require 'null_action'
require 'pager'
require 'terminator'
require 'updater'
require 'user_interface'
require 'validator'

array_database = ArrayDatabase.new
user_interface = UserInterface.new($stdin, $stdout, Validator.new)
actions = [
  Pager.new(user_interface, array_database),
  Creator.new(user_interface, array_database),
  Finder.new(user_interface, array_database),
  Updater.new(user_interface, array_database),
  Terminator.new(user_interface, array_database),
  NullAction.new
]

Controler.new(user_interface, actions).start
