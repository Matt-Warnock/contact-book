#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'db/array_database'
require 'controler'
require 'creator'
require 'file_database'
require 'finder'
require 'io/console'
require 'language_parser'
require 'null_action'
require 'pager'
require 'pathname'
require 'sqlite_database'
require 'terminator'
require 'updater'
require 'user_interface'
require 'validator'

messages = LanguageParser.new('locales/en.yml').messages

database = SQLiteDatabase.new('contacts.db')

user_interface = UserInterface.new($stdin, $stdout, Validator.new, messages)
actions = [
  Pager.new(user_interface, database),
  Creator.new(user_interface, database),
  Finder.new(user_interface, database),
  Updater.new(user_interface, database),
  Terminator.new(user_interface, database),
  NullAction.new
]

Controler.new(user_interface, actions, messages).start
