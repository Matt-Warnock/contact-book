#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'db/array_database'
require 'actions/controler'
require 'actions/creator'
require 'db/file_database'
require 'actions/finder'
require 'io/console'
require 'cli/language_parser'
require 'actions/null_action'
require 'actions/pager'
require 'pathname'
require 'db/sqlite_database'
require 'actions/terminator'
require 'actions/updater'
require 'cli/user_interface'
require 'cli/validator'

messages = CLI::LanguageParser.new('locales/en.yml').messages

database = DB::SQLiteDatabase.new('contacts.db')

user_interface = CLI::UserInterface.new($stdin, $stdout, Validator.new, messages)
actions = [
  Pager.new(user_interface, database),
  Creator.new(user_interface, database),
  Finder.new(user_interface, database),
  Updater.new(user_interface, database),
  Terminator.new(user_interface, database),
  NullAction.new
]

Actions::Controler.new(user_interface, actions, messages).start
